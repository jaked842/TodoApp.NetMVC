@model TodoApp.Models.Todo

<form method="post" asp-action="DeleteItem">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-2">
            <input class="form-control" readonly type="text" asp-for="Id">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TodoName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" readonly type="text" asp-for="TodoName">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AssignedPerson" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" readonly type="text" asp-for="AssignedPerson">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-action="TodoList" class="btn btn-secondary">Back</a>
</form>
